function acas_preprocess_html(&$variables) {
  if ((preg_match('/MSIE\s(?P<v>\d+)/i', @$_SERVER['HTTP_USER_AGENT'], $B) && $B['v'] <= 8) || \Drupal::request()->query->get('ie8')) {
    $variables['ie8'] = TRUE;
  }
}

